<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiHeart.DynamicHandlers"
             Title="DynamicHandlers">

    <ScrollView>
        <AbsoluteLayout x:Name="MyAbsolute">
            <Label 
            AbsoluteLayout.LayoutBounds="0.3, 0.2, 0.10, 0.10"
            AbsoluteLayout.LayoutFlags="All"
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
            <Button AbsoluteLayout.LayoutBounds="0.3, 0.4, 0.10, 0.10" AbsoluteLayout.LayoutFlags="All"
                Text="Clear all" Clicked="Button_Clicked" />
        </AbsoluteLayout>
    </ScrollView>

</ContentPage>