<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiHeart.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiHeart"
    Shell.FlyoutBehavior="Flyout"
    Title="Shell Page">
    <ShellContent
        Title="MovingPointsTest"
        ContentTemplate="{DataTemplate local:MovingPointsTest}"
        Route="MovingPointsTest" />
    <ShellContent
        Title="DynamicHandlers"
        ContentTemplate="{DataTemplate local:DynamicHandlers}"
        Route="DynamicHandlers" />
    <ShellContent
        Title="MovingControlPoints"
        ContentTemplate="{DataTemplate local:MovingControlPoints}"
        Route="MovingControlPoints" />
    <ShellContent
        Title="ABLayout"
        ContentTemplate="{DataTemplate local:ABLayout}"
        Route="ABLayout" />
    <ShellContent
        Title="HeartShapedBox"
        ContentTemplate="{DataTemplate local:HeartShapedBox}"
        Route="HeartShapedBox" />

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

</Shell>
